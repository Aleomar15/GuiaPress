<%- include ('../../partials/header.ejs');%>
<%- include ('../../partials/navbar.ejs');%>
<body>
    <div class="conteiner">
        <div class="card">
            <div class="card-header">
                <hr>
                    <h2>Novo artigo</h2>
                <hr>
            </div>
            <div class="card-body">
                <form method="POST" action="/categories/save">
                    <input class="form-control" type="text" name="title" placeholder="Difina o titulo do artigo"><br>
                    <textarea class="form-control" placeholder="Escreva o artigo aqui!" name="body" id="article"></textarea><br>
                    <button class="btn btn-primary">Cadastrar</button>
                </form>
            </div>
        </div>
    </div>

</body>
<%- include ('../../partials/footer.ejs');%>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({//adcionado edição
        language: 'pt_BR',
        selector: "#article",
        plugins: [
            'advlist','autolink', 'link', 'image', 'lists', 'print', 'preview', 'hr', 'searchreplace', 'wordcount', 'fullscreen', 'insertdatetime', 'media', 'save', 'table', 'paste', 'emoticons'
        ]
    });
</script>